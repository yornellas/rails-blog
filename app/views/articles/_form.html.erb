<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </p>

  <div>
    <%= f.label :status %><br>
    <%= f.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <p>
    <%= f.submit %>
  </p>

<% end %>

